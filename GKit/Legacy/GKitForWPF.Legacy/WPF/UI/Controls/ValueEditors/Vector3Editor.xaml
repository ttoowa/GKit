<UserControl x:Class="GKitForWPF.UI.Controls.Vector3Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

			 xmlns:VectorImages="clr-namespace:GKitForWPF.Resources.VectorImages"
			 xmlns:GControls="clr-namespace:GKitForWPF.UI.Controls"

             mc:Ignorable="d" 
             d:DesignWidth="200">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="15px"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="15px"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>

		<GControls:NumberEditor x:Name="ValueTextBox_X"/>
		<GControls:NumberEditor Grid.Column="2" x:Name="ValueTextBox_Y"/>
		<GControls:NumberEditor Grid.Column="4" x:Name="ValueTextBox_Z"/>
		<VectorImages:Cross Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<VectorImages:Cross Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Grid>
</UserControl>
